


<div id="title" class="jumbotron">
  <div class = "container">
    <h1><%= @user.client_company.name if @user.client_company %> Reports</h1>
    <h2>Weekly Summaries</h2>
  </div>
</div>

<div class="container">
  <% @reports.each do |f| %>
    <div class = "report_section">
      <div class="report_header">
        <h2>Week of <%= f.week_of.strftime("%m-%d-%Y") %> to <%= (f.week_of+ 6.days).strftime("%m-%d-%Y") %> </h2>

        <h3> Qualified Leads: <%= @leads.where("date_sourced >= ? AND date_sourced < ?", f.week_of, f.week_of + 7.days).count%></h3>

      <h3>Notes:</h3>
      <%= simple_format(f.report) %>
    </div>
    <hr>
  <% end %>
</div>

<!-- MODAL window to pop up short lead list -->
<div id="leadModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Leads for Week of </h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
